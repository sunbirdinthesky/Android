<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scan">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scanBackground"
        android:keepScreenOn="true" />

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_vertical" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scHome"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/m_home"
            android:layout_marginTop="34dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scWatchAds"
            android:layout_gravity="left|center_vertical"
            android:background="@mipmap/m_watch_ads"
            android:clickable="false"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/scHome"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scSurvey"
            android:layout_gravity="right|center_vertical"
            android:background="@mipmap/m_survey"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scRefresh"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@mipmap/w_refresh"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/scSurvey"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="111dp"
        android:layout_height="115dp"
        android:layout_gravity="left|top" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scReturn"
            android:background="@mipmap/w_back"
            android:layout_gravity="center" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:text="微信关注即可获免费纸巾一包"
            android:id="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/bin_picture"
            android:layout_gravity="center"
            android:background="@mipmap/two_dimensional_code"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</FrameLayout>