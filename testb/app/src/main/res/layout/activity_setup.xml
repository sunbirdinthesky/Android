<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ui.Setup"
    android:background="#0095ff">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/setupfullBackgroung"
        android:keepScreenOn="true" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:id="@+id/passwd"
        android:background="#ffffff"
        android:password="true"
        android:layout_alignBottom="@+id/textView"
        android:layout_toStartOf="@+id/ok" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:id="@+id/item"
        android:background="#ffffff"
        android:layout_below="@+id/passwd"
        android:layout_toStartOf="@+id/ok"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="密码:"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView4"
        android:layout_marginTop="65dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="剩余物品数量"
        android:id="@+id/textView4"
        android:textColor="#000000"
        android:textSize="16dp"
        android:singleLine="false"
        android:textAlignment="center"
        android:layout_alignTop="@+id/item"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认更改数量"
        android:id="@+id/ok"
        android:layout_alignTop="@+id/item"
        android:layout_alignParentEnd="true"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="地址:"
        android:id="@+id/textView6"
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:id="@+id/pos"
        android:background="#ffffff"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toStartOf="@+id/posOk" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认更改地址"
        android:id="@+id/posOk"
        android:layout_alignTop="@+id/pos"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
